@{
    taka.Models.Enitities.USER userInfo = (taka.Models.Enitities.USER)@Session[taka.Utils.C.SESSION.UserInfo];
}
<head>
    <style>
        .modal-content{
            opacity:0.9;
            
        }
        tr td{
            border: 0;
        }
    </style>
</head>
@if (userInfo != null)
{
    <div class="modal" tabindex="-1" role="dialog" id="modalUser" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông tin người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <th>Họ Tên</th>
                            <td>@userInfo.FULLNAME</td>
                        </tr>
                        <tr>
                            <th>Ngày sinh</th>
                            <td>@DateTime.Parse(@userInfo.BIRTHDAY.ToString()).ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@userInfo.EMAIL</td>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <td>@userInfo.PHONE</td>
                        </tr>
                        <tr>
                            <th>Giới tính</th>
                            <td>@userInfo.GENDER</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <a style="color:white" href="/User/Infor" class="btn btn-danger">Quản lý thông tin</a>
                </div>
                <div class="modal-footer">
                    <a style="color:white" href="/Home/Logout" class="btn btn-danger">Đăng xuất</a>
                </div>
            </div>
        </div>
    </div>
}

